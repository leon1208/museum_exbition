/* 展览详情页面样式 */
.container {
  position: relative;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  background-color: #ffffff;
  color: #1e293b;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 50;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx 30rpx 40rpx;
  background-color: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  max-width: 750rpx;
  margin: 0 auto;
}

.nav-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  background-color: #f1f5f9;
  border: none;
  font-size: 32rpx;
  color: #1e293b;
}

.nav-btn::after {
  border: none;
}

.nav-title {
  font-size: 28rpx;
  font-weight: bold;
  opacity: 0;
  transition: opacity 0.3s;
}

.nav-title.show {
  opacity: 1;
}

.nav-right {
  display: flex;
  gap: 20rpx;
}

.content {
  flex: 1;
  padding-top: 0rpx;
  padding-bottom: 50rpx;
  background-color: #ffffff;
}

.cover-container {
  position: relative;
  width: 100%;
  height: 600rpx;
  background-color: #e2e8f0;
}

.cover-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.2), transparent);
}

.info-section {
  padding: 40rpx;
}

.title-section {
  margin-bottom: 60rpx;
}

.exhibition-title {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1.2;
  margin-bottom: 30rpx;
  display: block;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx 30rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.tag-primary {
  background-color: rgba(66, 153, 240, 0.1);
  color: #4299f0;
}

.tag-secondary {
  background-color: #f1f5f9;
  color: #64748b;
}

.divider {
  height: 2rpx;
  width: 100%;
  background-color: #f1f5f9;
  margin: 30rpx 0;
}

.detail-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 80rpx;
}

.detail-item {
  display: flex;
  align-items: flex-start;
  gap: 40rpx;
}

.icon-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background-color: #f8fafc;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #4299f0;
  flex-shrink: 0;
}

.icon {
  font-family: 'Material Symbols Outlined';
  font-size: 32rpx;
}

.detail-content {
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 10rpx;
}

.value {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.sub-value {
  font-size: 24rpx;
  color: #94a3b8;
}

.curator-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.curator-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  object-fit: cover;
}

.intro-section {
  margin-bottom: 120rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 20rpx;
  display: block;
}

.section-header-content {
  display: flex;
  align-items: top;
  gap: 10rpx;
}

.section-title-with-icon {
  margin-bottom: 0;
}

.intro-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #475569;
  margin-bottom: 20rpx;
  font-family: 'Noto Sans SC', sans-serif;
}

.read-more-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #4299f0;
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 10rpx;
  background: none;
  border: none;
  padding: 0;
}

.read-more-btn::after {
  border: none;
}

.collections-section {
  margin-bottom: 60rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.collections-grid {
  column-count: 2;
  column-gap: 30rpx;
  /* row-gap: 30rpx; */
  /* space-y: 60rpx; */
}

.collection-item {
  break-inside: avoid;
  position: relative;
  /* margin-bottom: 30rpx; */
  padding-bottom: 30rpx;
  cursor: pointer;
}

.collection-img-container {
  position: relative;
  width: 100%;
  height: auto;
  border-radius: 15rpx;
  overflow: hidden;
  background-color: #f1f5f9;
  margin-bottom: 30rpx;
}

.collection-img {
  width: 100%;
  height: auto;
  object-fit: cover;
  display: block;
  transition: transform 0.5s;
}

.collection-img-container:active .collection-img {
  transform: scale(1.1);
}

.audio-icon {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}

.audio-icon .icon {
  font-size: 28rpx;
}

.collection-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1e293b;
  margin-bottom: 10rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.collection-artist {
  font-size: 24rpx;
  color: #64748b;
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 1; 
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: normal; 
}

.loading-indicator {
  display: flex;
  justify-content: center;
  padding: 60rpx;
}

.loading-spin {
  animation: spin 1s linear infinite;
  color: #94a3b8;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(16rpx);
  border-top: 2rpx solid #f1f5f9;
  max-width: 750rpx;
  margin: 0 auto;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  background-color: #f1f5f9;
  color: #1e293b;
  font-weight: 500;
  height: 96rpx;
  border-radius: 24rpx;
  transition: all 0.2s;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
}

/* 暗色主题支持 */
.container.dark {
  background-color: #0f172a;
  color: #f1f5f9;
}

.container.dark .nav-bar {
  background-color: rgba(15, 23, 42, 0.8);
}

.container.dark .nav-btn {
  background-color: #1e293b;
  color: #f1f5f9;
}

.container.dark .tag-secondary {
  background-color: #1e293b;
  color: #94a3b8;
}

.container.dark .divider {
  background-color: #1e293b;
}

.container.dark .icon-container {
  background-color: #1e293b;
}

.container.dark .label {
  color: #94a3b8;
}

.container.dark .value {
  color: #f1f5f9;
}

.container.dark .sub-value {
  color: #64748b;
}

.container.dark .intro-text {
  color: #cbd5e1;
}

.container.dark .collection-img-container {
  background-color: #1e293b;
}

.container.dark .collection-name {
  color: #f1f5f9;
}

.container.dark .collection-artist {
  color: #94a3b8;
}

.container.dark .bottom-bar {
  background-color: rgba(15, 23, 42, 0.9);
  border-top: 2rpx solid #1e293b;
}

.container.dark .action-btn {
  background-color: #1e293b;
  color: #f1f5f9;
}


/* 悬浮返回按钮样式 */
.back-btn {
  position: fixed;
  top: 110rpx;
  left: -30rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 255, 255, 0.0);
  display: flex;
  align-items: center;
  justify-content: left;
  z-index: 100;
  border: none;
}

.back-btn::after {
  border: none; /* 移除微信小程序默认按钮边框 */
}