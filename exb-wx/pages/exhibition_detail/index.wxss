.page {
  min-height: 100vh;
  background: #f6f7f8;
}

/* Header */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  background: rgba(255,255,255,0.9);
  z-index: 10;
}

.header-title {
  opacity: 0;
  font-weight: bold;
  transition: opacity 0.3s;
}

.header-title.show {
  opacity: 1;
}

.icon-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

/* Content */
.content {
  padding-top: 96rpx;
  height: 100vh;
}

.cover {
  width: 100%;
  height: 400rpx;
  background-size: cover;
  background-position: center;
}

/* Sections */
.section {
  padding: 32rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.tags {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.tag {
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  background: #eee;
  border-radius: 999rpx;
}

.tag.primary {
  background: rgba(66,153,240,0.15);
  color: #4299f0;
}

/* Info */
.info-item {
  padding: 24rpx 32rpx;
}

.info-label {
  font-size: 22rpx;
  color: #888;
}

.info-value {
  font-size: 28rpx;
  font-weight: 500;
}

.info-sub {
  font-size: 22rpx;
  color: #aaa;
}

/* Description */
.section-title {
  font-weight: bold;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

.more {
  margin-top: 12rpx;
  color: #4299f0;
}

/* Bottom bar */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: rgba(255,255,255,0.95);
}

.audio-btn {
  height: 88rpx;
  background: #f1f1f1;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
}
