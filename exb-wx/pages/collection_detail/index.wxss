.detail-content {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.label {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 10rpx;
}

.value {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

/* 描述和介绍部分 */
.intro-section {
  padding: 0 40rpx 40rpx 40rpx;
}

.intro-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #475569;
  margin-bottom: 20rpx;
  font-family: 'Noto Sans SC', sans-serif;
}

.read-more-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #4299f0;
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 10rpx;
  background: none;
  border: none;
  padding: 0;
}

.read-more-btn::after {
  border: none;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  background-color: #ffffff;
  border-top: 2rpx solid #f1f5f9;
  max-width: 750rpx;
  margin: 0 auto;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  width: 100%;
  height: 80rpx;
  background-color: #f1f5f9;
  border-radius: 15rpx;
  border: none;
  color: #1e293b;
  font-size: 26rpx;
}

.action-btn::after {
  border: none;
}

/* 分割线 */
.divider {
  height: 2rpx;
  width: 100%;
  background-color: #f1f5f9;
  margin: 30rpx 0;
}