/* 展览列表页面样式 */
page {
  background-color: #f6f7f8;
}

.container {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  background-color: #f6f7f8;
  color: #1e293b;
  overflow: hidden;
}

.nav-bar {
  position: sticky;
  top: 0;
  z-index: 50;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background-color: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(10px);
  border-bottom: 1rpx solid rgba(226, 232, 239, 0.5);
  max-width: 750rpx;
  margin: 0 auto;
}

.nav-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  background-color: #f1f5f9;
  border: none;
  font-size: 32rpx;
  color: #1e293b;
}

.nav-btn::after {
  border: none;
}

.nav-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
}

.nav-right {
  display: flex;
  gap: 20rpx;
}

.nav-spacer {
  width: 80rpx;
  height: 80rpx;
}

/* 筛选标签样式 */
.filter-chips {
  position: relative;
  top: 158rpx;
  z-index: 40;
  background-color: #f6f7f800;
  padding: 20rpx 0rpx 20rpx;
  flex-shrink: 0;
}

.chips-container {
  white-space: nowrap;
  display: flex;
  overflow-x: auto;
}

.chip {
  display: inline-flex;
  align-items: center;
  justify-content: flex-start;
  height: 52rpx;
  padding: 0 30rpx;
  margin-right: 10rpx;
  border-radius: 9999rpx;
  border: 2rpx solid transparent;
  font-size: 28rpx;
  transition: transform 0.2s;
}

.chip:active {
  transform: scale(0.95);
}

.chip-active {
  background-color: #4299f0;
  color: #ffffff;
  box-shadow: 0 4rpx 20rpx -4rpx rgba(66, 153, 240, 0.2);
}

.chip-inactive {
  background-color: #ffffff;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
}

.chip-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.chip-text {
  font-weight: 500;
}

/* 展览列表样式 */
.exhibition-list {
  flex: 1;
  padding: 160rpx 30rpx 30rpx 30rpx;
  overflow-y: auto;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #94a3b8;
}

.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
}

/* 展览卡片样式 */
.exhibition-card {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  border-radius: 30rpx;
  background-color: #ffffff;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 40rpx -8rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.exhibition-card:active {
  transform: scale(0.99);
}

.card-image-container {
  position: relative;
  width: 100%;
  height: 360rpx;
  background-color: #e2e8f0;
}

.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.category-tags-container {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.category-tag {
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  padding: 1rpx 15rpx;
  border-radius: 24rpx;
}

.category-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #4299f0;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.card-content {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.exhibition-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e293b;
  line-height: 1.3;
}

.date-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  color: #4299f0;
}

.date-icon {
  font-size: 32rpx;
}

.date-text {
  font-size: 28rpx;
  font-weight: 500;
}

.exhibition-description {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.detail-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  width: 100%;
  padding: 20rpx 0rpx;
  border-radius: 30rpx;
  background-color: rgba(66, 153, 240, 0.1);
  transition: background-color 0.2s;
}

.detail-button:active {
  background-color: rgba(66, 153, 240, 0.2);
}

.detail-text {
  font-size: 28rpx;
  color: #4299f0;
  font-weight: 500;
}

.detail-arrow {
  font-size: 28rpx;
  color: #4299f0;
}

.back-btn {
  position: fixed;
  top: 110rpx;
  left: -30rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 255, 255, 0.0);
  display: flex;
  align-items: center;
  justify-content: left;
  z-index: 100;
  border: none;
}

.back-btn::after {
  border: none; /* 移除微信小程序默认按钮边框 */
}