/* 教育活动列表页面样式 */
page {
  background-color: #f6f7f8;
}

.container {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  background-color: #f6f7f8;
  color: #1e293b;
  overflow: hidden;
}

.head-title {
  position: fixed;
  top: 110rpx;
  display: flex;
  align-items: flex-start;
  z-index: 100;
  border: none;
  font-size: large;
  color: black;
}

.nav-bar {
  position: sticky;
  top: 0;
  z-index: 50;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background-color: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(10px);
  border-bottom: 1rpx solid rgba(226, 232, 239, 0.5);
  max-width: 750rpx;
  margin: 0 auto;
}

.nav-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  background-color: #f1f5f9;
  border: none;
  font-size: 32rpx;
  color: #1e293b;
}

.nav-btn::after {
  border: none;
}

.nav-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
}

.nav-right {
  display: flex;
  gap: 20rpx;
}

.nav-spacer {
  width: 80rpx;
  height: 80rpx;
}

/* 筛选标签样式 */
.filter-chips {
  position: relative;
  top: 158rpx;
  z-index: 40;
  background-color: #f6f7f800;
  padding: 20rpx 0rpx 20rpx;
  flex-shrink: 0;
}

.chips-container {
  white-space: nowrap;
  display: flex;
  overflow-x: auto;
}

.chip {
  display: inline-flex;
  align-items: center;
  justify-content: flex-start;
  height: 52rpx;
  padding: 0 30rpx;
  margin-right: 10rpx;
  border-radius: 50rpx;
  border: 2rpx solid #e2e8f0;
  transition: all 0.3s ease;
  cursor: pointer;
}

.chip-active {
  background-color: #4299f0;
  color: white;
  border-color: #4299f0;
}

.chip-inactive {
  background-color: white;
  color: #64748b;
  border-color: #e2e8f0;
}

.chip-text {
  font-size: 28rpx;
  white-space: nowrap;
}

/* 教育活动列表样式 */
.education-list {
  flex: 1;
  padding: 10rpx 20rpx 20rpx;
  margin-top: 150rpx;
  overflow-y: auto;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #64748b;
}

.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  padding: 40rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #64748b;
  text-align: center;
}

/* 教育活动卡片样式 */
.education-card {
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.education-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.12);
}

.card-image-container {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.category-tags-container {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  display: flex;
  gap: 10rpx;
}

.category-tag {
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  padding: 1rpx 15rpx;
  border-radius: 24rpx;
}

.category-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #4299f0;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.card-content {
  flex: 1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-header {
  margin-bottom: 10rpx;
}

.education-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  display: -webkit-box;
  -webkit-line-clamp: 1;  /* 限制显示1行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;  /* 超出部分显示省略号 */
}

.date-info {
  display: flex;
  align-items: center;
  margin-bottom: 5rpx;
  color: #4299f0;
}

.date-text {
  font-size: 26rpx;
  font-weight: 500;
  margin-left: 10rpx;
  margin-right: 20rpx;
}

.status-upcoming {
  background-color: #4299f0; /* 蓝色背景 */
  color: white; /* 白色文字 */
  font-size: 26rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}
 
.status-ended {
  background-color: #ccc; /* 灰色背景 */
  color: gray; /* 黑色文字 */
  font-size: 26rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}
 
.status-cancelled {
  background-color: #ff4d4f; /* 红色背景 */
  color: white; /* 白色文字 */
  font-size: 26rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.location-info {
  display: flex;
  align-items: center;
  margin-bottom: 5rpx;
  color: #4299f0;
}

.location-text {
  font-size: 26rpx;
  font-weight: 500;
  margin-left: 10rpx;
}

.education-description {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.detail-button {  
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  width: 100%;
  padding: 20rpx 0rpx;
  border-radius: 30rpx;
  background-color: rgba(66, 153, 240, 0.1);
  transition: background-color 0.2s;
}

.detail-button:active {
  background-color: rgba(66, 153, 240, 0.2);
}

.detail-text {
  font-size: 28rpx;
  color: #4299f0;
  font-weight: 500;
}

.back-btn {
  position: fixed;
  top: 110rpx;
  left: -30rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 255, 255, 0.0);
  display: flex;
  align-items: center;
  justify-content: left;
  z-index: 100;
  border: none;
}

.back-btn::after {
  border: none; /* 移除微信小程序默认按钮边框 */
}

.detail-arrow {
  font-size: 28rpx;
  color: #4299f0;
}
