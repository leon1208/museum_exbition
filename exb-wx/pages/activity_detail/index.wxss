/* 教育活动详情页面样式 */
page {
  background-color: #f6f7f8;
}

.container {
  position: relative;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  background-color: #f6f7f8;
  color: #1e293b;
  overflow: hidden;
}

.back-btn {
  position: fixed;
  top: 110rpx;
  left: -30rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 255, 255, 0.0);
  display: flex;
  align-items: center;
  justify-content: left;
  z-index: 100;
  border: none;
}

.back-btn::after {
  border: none; /* 移除微信小程序默认按钮边框 */
}

/* 封面区域 */
.cover-container {
  position: relative;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  z-index: 1;
}

.cover-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 60rpx 40rpx 40rpx;
  z-index: 2;
  color: white;
}

.cover-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.cover-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.cover-type {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.cover-date {
  font-size: 26rpx;
}

/* 内容区域 */
.content-container {
  flex: 1;
  padding: 0 40rpx 40rpx;
  margin-top: -60rpx;
  position: relative;
  z-index: 10;
}

.info-section, .desc-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 25rpx;
}

.info-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #64748b;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #1e293b;
}

.desc-text {
  font-size: 28rpx;
  color: #1e293b;
  line-height: 1.6;
}

.action-container {
  padding: 40rpx 0;
  display: flex;
  justify-content: center;
}

.register-btn {
  width: 80%;
  height: 80rpx;
  background-color: #4299f0;
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.register-btn::after {
  border: none;
}

.register-btn-cancel {
  width: 80%;
  height: 80rpx;
  background-color: #ff6b6b;
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.register-btn-cancel::after {
  border: none;
}
