.page {
  background: #f0f9ff;
  min-height: 100vh;
  padding-bottom: 140rpx; /* 增加底部内边距，为底部切换栏留出空间 */
}

/* 用户信息区域 */
.user-section {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300rpx;
}

.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding-top: 20rpx;
}

.avatar-button {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-button::after {
  border: none;
}

.user-info-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding-top: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  margin-bottom: 20rpx;
}


/* 为input类型的.nickname添加特殊样式 */
input.nickname {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
  text-align: center; /* 让输入框内的文本居中 */
  width: 200rpx; /* 设置固定宽度以便居中效果更明显 */
  border: none;
  background: transparent;
  outline: none;
  padding: 0;
}

/* 原有的.nickname样式保持不变（适用于text元素） */
.nickname {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
  text-align: center; /* 添加居中对齐 */
}

.phone-button {
  background-color: #fff;
  color: #333;
  border-radius: 40rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 功能菜单 */
.menu-section {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.arrow {
  color: #ccc;
  font-size: 24rpx;
}

/* 版本信息 */
.version-section {
  padding: 40rpx 20rpx;
  text-align: center;
}

.version-text {
  color: #999;
  font-size: 24rpx;
}

/* 底部TabBar样式 - 与首页保持一致 */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: rgba(255,255,255,.9);
  display: flex;
  justify-content: space-around;
  padding-top: 12rpx;
  z-index: 999;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.tab-item .icon {
  font-size: 40rpx;
}

.tab-item.active {
  color: #38bdf8;
}

.tab-item text {
  font-size: 24rpx;
}