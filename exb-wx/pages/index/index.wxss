.page {
  background: #f0f9ff;
  padding-bottom: 140rpx;
  overflow-x: hidden;
}

/* Hero */
.hero {
  position: relative;
  height: 55vh;
  min-height: 420rpx;
}

.hero-swiper {
  width: 100%;
  height: 100%;
}

.hero-bg {
  width: 100%;
  height: 100%;
  display: block;
}

.hero-mask {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0,0,0,.8), rgba(0,0,0,.3), transparent);
  pointer-events: none; /* 添加这行代码，允许触摸事件穿透遮罩层 */
}

.hero-top {
  position: absolute;
  top: 40rpx;
  left: 24rpx;
  right: 24rpx;
  display: flex;
  justify-content: space-between;
}

.icon-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255,255,255,.15);
  color: #fff;
}

.right {
  display: flex;
  gap: 24rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.hero-bottom {
  position: absolute;
  bottom: 40rpx;
  left: 24rpx;
  right: 24rpx;
  color: #fff;
}

.tag {
  background: #38bdf8;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  margin-right: 16rpx; /* 增加两个标签之间的间距 */
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  margin-top: 16rpx;
}

.desc {
  font-size: 26rpx;
  color: #ddd;
  margin-top: 12rpx;
}

/* Section */
.section {
  margin-top: 40rpx;
}

.section-header {
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
}

.more {
  color: #38bdf8;
  font-size: 26rpx;
}

.h-scroll {
  white-space: nowrap;
  padding-left: 24rpx;
}

.card {
  width: 300rpx;
  display: inline-block;
  margin-right: 24rpx;
}

.card-img {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
}

.card-title {
  font-weight: bold;
  margin-top: 12rpx;
}

.card-sub {
  font-size: 24rpx;
  color: #888;
}

/* ===== Exhibition ===== */
.exhibit-card {
  width: 520rpx;
  display: inline-block;
  margin-right: 24rpx;
}
.exhibit-img-wrap {
  position: relative;
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.exhibit-img {
  width: 100%;
  height: 100%;
}
.exhibit-mask {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0,0,0,.7), transparent);
}
.badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  padding: 6rpx 12rpx;
  font-size: 20rpx;
  color: #fff;
  border-radius: 6rpx;
}
.badge.ongoing {
  background: rgba(0, 255, 255, 0.6);
}
.badge.ended {
  background: rgba(255, 0, 0, 0.6);
}
.badge.upcoming {
  background: #38bdf8;
}
.exhibit-info {
  position: absolute;
  bottom: 12rpx;
  left: 12rpx;
  color: #fff;
  font-size: 22rpx;
}
.exhibit-title {
  font-weight: bold;
  margin-top: 12rpx;
}
.exhibit-desc {
  font-size: 24rpx;
  color: #666;

  /* 单行文本截断 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ===== Education ===== */
.edu-card {
  width: 460rpx;
  display: inline-flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 16rpx;
  margin-right: 24rpx;
}
.edu-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0; /* 防止图片被压缩 */
}
.edu-content {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0; /* 确保flex项目可以收缩 */
}
.edu-type {
  font-size: 20rpx;
  color: #38bdf8;
}
.edu-title {
  font-weight: bold;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.edu-time {
  font-size: 22rpx;
  color: #888;
}
.add-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #e0f2fe;
  color: #38bdf8;
}

/* ===== TabBar ===== */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: rgba(255,255,255,.9);
  display: flex;
  justify-content: space-around;
  padding-top: 12rpx;
}
.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}
.tab-item .icon {
  font-size: 40rpx;
}
.tab-item.active {
  color: #38bdf8;
}