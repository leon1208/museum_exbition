.container {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  background-color: #f6f7f8;
  color: #1e293b;
  overflow: hidden;
}

.back-btn {
  position: fixed;
  top: 110rpx;
  left: -30rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 255, 255, 0.0);
  display: flex;
  align-items: center;
  justify-content: left;
  z-index: 100;
  border: none;
}

.back-btn::after {
  border: none; /* 移除微信小程序默认按钮边框 */
}

/* 筛选标签容器 */
.filter-chips {
  position: relative;
  top: 158rpx;
  z-index: 40;
  background-color: #f6f7f800;
  /* padding: 20rpx 0rpx 20rpx; */
  /* flex-shrink: 0; */
  align-self: start;
  overflow-x: auto;
}

.filter-container {
  position: relative;
  top: 158rpx;
  z-index: 40;
  white-space: nowrap;
  padding: 20rpx 30rpx;
}

.filter-scroll-content {
  display: flex;
  align-items: center;
  padding: 0rpx 20rpx;
}

.filter-chip {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
  background-color: #ffffff;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
}

.filter-chip.active {
  background-color: #4299f0;
  color: #ffffff;
  box-shadow: 0 4rpx 20rpx -4rpx rgba(66, 153, 240, 0.2);
}

/* 展品列表容器 */
.collections-container {
  /* height: calc(100vh - 100rpx); */
  background-color: #f8f8f8;
  flex: 1;
  padding: 160rpx 30rpx 30rpx 30rpx;
  overflow-y: auto;
}

/* 瀑布流网格布局 */
.collections-grid {
  padding: 0 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  column-count: 2; /* 实现两列布局 */
  column-gap: 20rpx; /* 列间距 */
}

/* 展品项样式 */
.collection-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  break-inside: avoid; /* 防止元素被分割到不同列 */
  page-break-inside: avoid; /* 兼容性 */
}

/* 图片容器 */
.collection-img-container {
  width: 100%;
  height: auto;
  position: relative;
  overflow: hidden;
}

.collection-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s;
}

.collection-img-container:active .collection-img {
  transform: scale(1.1);
}

/* 展品信息 */
.collection-info {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.collection-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.collection-type {
  font-size: 24rpx;
  color: #888;
}

/* 加载提示 */
.loading-container {
  text-align: center;
  padding: 40rpx 0;
  column-span: all; /* 跨越所有列 */
}

.loading-text {
  color: #888;
  font-size: 28rpx;
}

/* 没有更多数据提示 */
.no-more-container {
  text-align: center;
  padding: 40rpx 0;
  column-span: all; /* 跨越所有列 */
}

.no-more-text {
  color: #ccc;
  font-size: 28rpx;
}

/* 响应式设计 */
@media screen and (min-width: 750rpx) {
  .collections-grid {
    flex-direction: row;
    justify-content: space-between;
    gap: 20rpx;
  }
  
  .collection-item {
    margin-bottom: 20rpx;
    flex: 1;
  }
  
  .collection-img-container {
    height: 350rpx;
  }
}